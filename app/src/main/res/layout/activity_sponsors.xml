<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#aaa"
    tools:context="com.abhishek.cynosure_2k18.sponsors">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:paddingTop="8dp"
            android:layout_height="180dp"
            android:src="@drawable/godreg"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:src="@drawable/bajaj"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:src="@drawable/coderoot"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:src="@drawable/spa"
            android:paddingTop="16dp"/>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:src="@drawable/spb"
            android:paddingTop="16dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:src="@drawable/spc"
            android:paddingTop="16dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:src="@drawable/spd"
            android:paddingTop="16dp"/>


    </LinearLayout>
</ScrollView>
